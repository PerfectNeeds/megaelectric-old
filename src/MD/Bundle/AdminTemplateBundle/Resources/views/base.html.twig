<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}{% endblock %} :: MegaLectric</title>
    {% block meta %}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="Mosaddek">
        <meta name="keyword" content="MegaLectric">
        <link rel="icon" type="image/ico" href="{{ asset('favicon.ico') }}">
    {% endblock %}

        {% block stylesheets %}
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('bundles/admintemplate/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/admintemplate/css/bootstrap-reset.css') }}" rel="stylesheet">
        <!--external css-->
        <link href="{{ asset('bundles/admintemplate/assets/font-awesome/css/font-awesome.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/admintemplate/assets/gritter/css/jquery.gritter.css') }}" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="{{ asset('bundles/admintemplate/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/admintemplate/css/style-responsive.css') }}" rel="stylesheet">

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
        <!--[if lt IE 9]>
        <link href="{{ asset('bundles/admintemplate/js/html5shiv.js') }}" rel="stylesheet">
        <link href="{{ asset('bundles/admintemplate/js/respond.min.js') }}" rel="stylesheet">
        <![endif]-->
        {% endblock %}
    </head>

    <body>

        <section id="container" class="">
            <!--header start-->
            <header class="header white-bg">
                <div class="sidebar-toggle-box">
                    <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
                </div>
                <!--logo start-->
                <a href="#" class="logo" >Mega<span>Lectric</span></a>
                <!--logo end-->
                <div class="top-nav ">
                    <ul class="nav pull-right top-menu">
                        <!-- user login dropdown start-->
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <img alt="" src="{{ asset('bundles/admintemplate/img/avatar-mini.jpg') }}">
                                <span class="username">{{ app.user.username }}</span>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu extended logout">
                                <li><a href="{{ url('logout') }}"><i class="icon-key"></i> Log Out</a></li>
                            </ul>
                        </li>
                        <!-- user login dropdown end -->
                    </ul>
                </div>
            </header>
            <!--header end-->
            <!--sidebar start-->
            <aside>
                <div id="sidebar"  class="nav-collapse ">
                    <!-- sidebar menu start-->
                    <ul class="sidebar-menu">
                        {% include 'AdminTemplateBundle::menu.html.twig' %}
                    </ul>
                    <!-- sidebar menu end-->
                </div>
            </aside>
            <!--sidebar end-->
            <!--main content start-->
            <section id="main-content">
                <section class="wrapper">
              {% block body %}
              {% endblock %}
                </section>
            </section>
            <!--main content end-->
        </section>
{% block javascripts %}

        <!-- js placed at the end of the document so the pages load faster -->
        <script src="{{ asset('bundles/admintemplate/js/jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/admintemplate/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/admintemplate/js/jquery.scrollTo.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/admintemplate/js/jquery.nicescroll.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/admintemplate/assets/gritter/js/jquery.gritter.js') }}" type="text/javascript"></script>

        <!--common script for all pages-->
        <script src="{{ asset('bundles/admintemplate/js/common-scripts.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>