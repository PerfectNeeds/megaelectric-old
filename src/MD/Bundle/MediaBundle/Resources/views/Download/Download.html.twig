{% extends 'AdminTemplateBundle::base.html.twig' %}
{% block title %}Users{% endblock %}
{% block body -%}
{{ parent() }}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Edit {{entity.username}}
            </header>
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="{{ path('user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                    <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save</button>
                        </div>
                    </div>
                </form>
                <a class="btn btn-round btn-info" href="{{ path('dynamicpage') }}"><i class="icon-undo"></i> Back to the list</a>
                <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </section>
    </div>
</div>
{% endblock %}
