<!DOCTYPE html>
<html>
    <head>
        <meta charset=utf-8 />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
		<link rel="shortcut icon" type="image/png" href="{{ asset('favicon.ico') }}?v=1.0.0" />
        <title>{% block title %}{% endblock %} | Megalectric</title>

        {% block stylesheet %}
        <link href="{{ asset('bundles/fe/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/fe/css/main.css') }}?v=1.3" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/fe/css/responsive.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/fe/css/fonts.css') }}?v=1.1" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/fe/css/bjqs.css') }}?v=1.1" rel="stylesheet" type="text/css">
        {% endblock %}
    </head>

    <body>
        <header> <!-- Start of Header -->
            <section class="logo_container"> <!-- Start Of logo_container -->
                <div class="logo_bar"> <!-- Start Of logo_bar -->
                    <a href="{{ path('fe_home') }}"><img src="{{ asset('bundles/fe/images/logo.jpg') }}?v=1.0.0" class="logo"></a>
                    <img src="{{ asset('bundles/fe/images/responsive.jpg') }}" class="hidden-lg hidden-md hidden-sm rs-btn">
                </div>  <!-- End Of logo_bar -->
                <nav> <!-- Start of nav -->
                    <ul>
                        <li> <a href="{{ path("fe_dynamicpage"  , {   'name': "about-us"  } ) }}"> ABOUT US</a>
                           {# <ol class="sub_menu">
                                <li><a href="{{ path("fe_dynamicpage"  , {   'name': "about-us"  } ) }}"> ABOUT </a></li>
                                <li><a href="{{ path("fe_dynamicpage"  , {   'name': "history"  } ) }}"> HISTORY</a></li>
                            </ol>#}
                        </li>
                            {{ render(controller('CMSBundle:FrontEnd/HomePage:menuOurSolution')) }}

                        <li><a href="{{ path('fe_contact') }}"> CONTACT US </a></li>
                    </ul>	
                </nav> <!-- End of nav -->
            </section> <!-- End Of logo_container -->
            <section class="banner"> <!-- Start of banner -->
                <ul class="bjqs">
                       {% block banner %}{% endblock %}
                </ul>
            </section>
        </header> <!-- End of Header -->
        <div class="main-content"> <!-- Start Of main-Content -->
        {% block content %}
        {%  endblock %}
        </div> <!-- End Of Main-Content -->
        <section class="social_media"><!-- Start Of Social Media -->
            <ul class="container" style="padding: 0px;">
                <li><a href="https://plus.google.com/110823094938762418661" target="_blank"><span class="icon-google"></span></a></li>
                <li><a href="https://www.facebook.com/megalectric" target="_blank"><span class="icon-facebook"></span></a></li>
                <li><a href="https://twitter.com/Megalectric" target="_blank"><span class="icon-twitter"></span></a></li>
                <li><a href="http://instagram.com/megalectric" target="_blank"><span class="icon-instagram"></span></a></li>
                <li><a href="http://www.linkedin.com/company/megalectric" target="_blank"><span class="icon-in"></span></a></li>
                <li><a href="http://www.flickr.com/photos/bticino/" target="_blank"><span class="icon-flikr"></span></a></li>
                <li><a href="https://www.youtube.com/user/BTicinoInternational" target="_blank"><span class="icon-utube"></span></a></li>
            </ul>
        </section> <!-- End Of Social Media -->
        <section class="brands"> <!-- Start of Brands -->
            <a href="http://www.bticino.com/" target="_blank"><img src="{{ asset('bundles/fe/images/footer-bticino.jpg') }}" /></a>
            <a href="http://www.legrand.com" target="_blank"><img src="{{ asset('bundles/fe/images/footer-legrand.jpg') }}" /></a>
            <a href="http://www.katko.com/" target="_blank"><img src="{{ asset('bundles/fe/images/footer-katko.jpg') }}" /></a>
            <a href="http://www.estap.com.tr/en/" target="_blank"><img src="{{ asset('bundles/fe/images/footer-estap.jpg') }}" /></a>
        </section> <!-- End of Brands -->
        <footer> <!-- Start of Footer -->
            <div class="footer_content"> <!-- Start of Footer Content -->
                <p> &copy; All Rights Reserved Megalectric <br/> 
                    <a href="http://www.perfectneeds.com" target="_blank">Web Design & Development By PerfectNeeds </a></p>
            </div> <!-- End Of Footer Content -->
        </footer> <!-- End Of Footer -->

        {% block javascript %}
        <script src="{{ asset('bundles/fe/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/fe/js/jquery-1.7.1.min.js') }}" type="text/javascript"></script>
        {#<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>#}
        <script src="{{ asset('bundles/fe/js/script.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/fe/js/bjqs-1.3.min.js') }}"></script>
        <script class="secret-source">
            jQuery(document).ready(function($) {

                $('.banner').bjqs({
                    height: 400,
                    width: '100%'
                });

            });
        </script>
        {% endblock %}
    </body>
</html>
