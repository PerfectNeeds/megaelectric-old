{% extends 'FEBundle::base.html.twig' %}
{% block title %}Contact Us{% endblock %}

{% block banner %}
{{ render(controller('CMSBundle:FrontEnd/Banner:Banner' , {'placment' : 5 })) }}
{%endblock %}

{% block content %}
<div class="contact-us container"> <!-- Start Of Contact us -->
    <h3> Contact Us </h3>
    <div class="map"> <!-- Start Of Map -->
        <div id="map" style="width: 100%; height: 350px"></div>
    </div> <!-- End Of Map -->
    <form id="commentForm" class="col-md-7 col-sm-7 col-xs-12" action="{{ path('fe_contact_submit') }}" method="POST"> <!-- Start Of Form -->
        <div class="fisrtone col-md-6">
            <input id="cfirstname" class="form-control" name="First Name" type="text" placeholder="First Name" minlength="3" required>
        </div>
        <div class="lastone col-md-6">
            <input id="clastname" class="form-control" name="Last Name" type="text" value="" minlength="3" placeholder="Last Name" required>
        </div>
        <div class="fisrtone col-md-6">
            <input id="cemail" class="form-control" name="Email" type="email" placeholder="Email Address" required>
        </div>
        <div class="lastone col-md-6">
            <input id="cnumber" class="form-control" name="Mobile" type="number" minlength="9" placeholder="Mobile">
        </div>
        <div class="col-md-12">
            <textarea id="cmessage" class="form-control" name="Message" minlength="10" placeholder="Your Message" required></textarea>
        </div>
        <div class="clear"></div>
        <button data-sitekey="6LeTp5oUAAAAAMJ21lpw91yyKghwO3It8i0adXrw" data-callback='onSubmit' class="g-recaptcha" name="send"> SEND </button>
    </form> <!-- End Of Form -->
    <div class="contact_info col-md-5 col-sm-5 col-xs-12"> <!-- Start Of contact_info -->
        <h3> Alexandria Head Office: </h3>
        <p> 195 Abd El Salam Aref Street, Loran <br/>
            TEL   : +203 585 3188 |
            TEL   : +203 584 1773 |
            FAX   : +203 583 2085 </p>
        <h3> Cairo Office: </h3>
        <p> 45 Gamet El Dowal El Arabeya Street, El Mohandeseen <br/>
            Telefax: +202 3761 8756 </p>
        <h3> Alexandria Store: </h3>
        <p> 70 El Sabaa Banat Street, El Mansheya <br/>
            Tel: +203 4864933 </p>
        <h3> Find our products at: </h3>
        <p> El Arabi - 3 Brothers - Carrefour - Radio Shack - El Ataba </p>
        <h3> Email: info@megalectric.com </h3>
    </div> <!-- End Of contact_info -->
</div> <!-- End Of Contact us -->
{% endblock%}

{% block javascript %}
{{ parent() }}
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="{{ asset('bundles/fe/js/mapmarker.jquery.js') }}"></script>
<script src='https://www.google.com/recaptcha/api.js'></script>
    <script>
        function onSubmit(token) {
            $("#commentForm").submit();
        }
    </script>
<script type="text/javascript">
    $(document).ready(function() {
        var myMarkers = {"markers": [
                {"latitude": "31.242765", "longitude": "29.965724", "icon": "{{ asset('bundles/fe/images/marker.png') }}", "baloon_text": 'This is <strong>Megalectric</strong>'},
            ]
        };

        $("#map").mapmarker({
            zoom: 15,
            center: 'al Doha Alexandria, Egypt',
            markers: myMarkers
        });
        // validate the comment form when it is submitted
        $("#commentForm").validate();
    });
</script>
<script src="{{ asset('bundles/fe/js/jquery.validate.js') }}"></script>
{% endblock %}
