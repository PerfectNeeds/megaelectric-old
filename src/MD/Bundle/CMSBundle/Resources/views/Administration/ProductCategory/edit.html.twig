{% extends 'AdminTemplateBundle::base.html.twig' %}
{% block title %}Edit Product Category{% endblock %}
{% set page_title %}Edit Product Category{% endset%}
{% block body -%}
{{ tinymce_init() }}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                {{page_title}}
            </header> 
            <div class="panel-body">
                <form class="form-horizontal tasi-form" action="{{ path('product-category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                    <input type="hidden" name="_method" value="PUT" />
    {{ form_widget(edit_form) }}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-primary" type="submit">Update</button>
                            <button type="reset" class="btn btn-default">Cancel</button>
                        </div>
                    </div>
                </form>
                <a class="btn btn-round btn-info" href="{{ path('product-category') }}"><i class="icon-undo"></i> Back to the list</a>
            </div>
        </section>
    </div>
</div>
{% endblock %}
{% block javascripts  %}
{{ parent() }}
{% include "FileUploaderBundle::basejs.html.twig" %}
<script type="text/javascript" src="{{ asset('bundles/admintemplate/js/jquery.slug.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $("#md_bundle_cmsbundle_productcategory_name").slug({
            slug: 'slug', // class of input / span that contains the generated slug 
            hide: false        // hide the text input, true by default 
        });
    });
</script>
{% endblock %}