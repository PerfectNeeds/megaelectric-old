{% extends 'AdminTemplateBundle::base.html.twig' %}
{% block title %}Add Our Partners{% endblock %}
{% set page_title %}Our Partners Creation{% endset %}
{% block body -%}
    {{ tinymce_init() }}
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    {{ page_title }}
                </header>
                <div class="panel-body">

                    <form class="form-horizontal tasi-form" action="{{ path('our-solution_create') }}" method="post" {{ form_enctype(form) }}>
                        {{ form_widget(form) }}
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" class="btn btn-default">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-body">
                    <a class="btn btn-round btn-info" href="{{ path('our-solution') }}"><i class="icon-undo"></i> Back to the list</a>
                </div>
            </section>
        </div>
    </div>

{% endblock %}
{% block javascripts  %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/admintemplate/js/jquery.slug.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#md_bundle_cmsbundle_oursolution_title").slug({
                slug: 'slug', // class of input / span that contains the generated slug 
                hide: false        // hide the text input, true by default 
            });
        });
    </script>
{% endblock %}
