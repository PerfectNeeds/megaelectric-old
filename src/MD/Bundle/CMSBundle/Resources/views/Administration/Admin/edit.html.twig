{% extends 'AdminTemplateBundle::base.html.twig' %}
{% block title %}Admin{% endblock %}
{% block page_title %}Admin Edit{% endblock %}
{% block body -%}
{{parent()}}
<section id="content">
    <h1>Admin edit</h1>

    <form action="{{ path('admin_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
</section>

{% endblock %}
