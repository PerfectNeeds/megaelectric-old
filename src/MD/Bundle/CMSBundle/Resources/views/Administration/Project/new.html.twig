{% extends 'AdminTemplateBundle::base.html.twig' %}
{% block title %}Add Project{% endblock %}
{% set page_title %}Project Creation{% endset %}
{% block body -%}
{{ tinymce_init() }}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                {{ page_title }}
            </header>
            <div class="panel-body">

                <form class="form-horizontal tasi-form" action="{{ path('project_create', { 'sId': ourSolution.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-default">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-body">
                <a class="btn btn-round btn-info" href="{{ path('project', { 'sId': ourSolution.id }) }}"><i class="icon-undo"></i> Back to the list</a>
            </div>
        </section>
    </div>
</div>

{% endblock %}
