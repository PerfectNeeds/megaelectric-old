{% extends 'AdminTemplateBundle::base.html.twig' %}
{% block title %}Manage {{ourSolution.title}}'s Projects {% endblock %}
{% block page_title %}Manage {{ourSolution.title}}'s Projects{% endblock %}

{% block body -%}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body progress-panel">
                <div class="task-progress">
                    <h1>Manage {{ourSolution.title}}'s Projects</h1>
                </div>
                <div class="task-option">
                    <a class="btn btn-success" href="{{ path('project_new', { 'sId': ourSolution.id }) }}">Create a new entry</a>
                </div>
            </div>
            <table class="table table-striped border-top" id="sample_1">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
        {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.title }}</td>
                        <td>
                            <a title="" data-placement="top" data-toggle="tooltip" href="{{ path('project_edit', { 'id': entity.id , 'sId':ourSolution.id}) }}" class="btn btn-primary btn-xs tooltips" data-original-title="Edit"><i class="icon-pencil"></i></a>
                            <a title="" data-placement="top" data-toggle="tooltip" href="#" onclick="javascript:del({{entity.id}})" class="btn btn-danger btn-xs tooltips" data-original-title="Delete"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
        {% endfor %}
                </tbody>
            </table>
            <div class="panel-body progress-panel">
                <div class="task-option">
                    <a class="btn btn-success" href="{{ path('project_new', { 'sId': ourSolution.id }) }}">Create a new entry</a>
                </div>
            </div>
            <form hidden name="delete_form" id="delete_form" action="{{ path('project_delete', {'sId':ourSolution.id}) }}" method="POST"  >
                <input type="hidden" name="id" id="entityId" />
            </form>
        </section>
    </div>
</div>
    {% endblock %}
       {% block javascripts %}
    {{parent()}}
<!--script for this page only-->
<script type="text/javascript" src="{{ asset('bundles/admintemplate/assets/data-tables/jquery.dataTables.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/admintemplate/assets/data-tables/DT_bootstrap.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/admintemplate/js/dynamic-table.js') }}"></script>
<script>
    function del(id) {
        if (confirm("Are you sure you want to delete?"))
        {
            $('#entityId').val(id);
            $('#delete_form').submit();
        }
    }
</script>
    {% endblock %}
